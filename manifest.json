{
    "manifest_version":3,
    "name": "Shoe Price Tracker",
    "version": "1.0.0",
    "description": "Compare shoe prices across multiple retailers instantly",
    "icons": {
        "16": "logo-16.png",
        "32": "logo-32.png",
        "48": "logo-34.png",
        "128": "logo-128.png"
    },
    "action": {
        "default_popup": "hello.html",
        "default_icon": "logo-128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.nike.com/*"],
            "js": ["contentscript.js"]
        },
        {
            "matches": ["https://www.footlocker.ca/"],
            "js": [""]
        }
    ]
}